<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/sample_main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Start Service"
            android:textSize="24sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAccessCode_1"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Access Code"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnACK_1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Ack-1"
            android:textSize="24sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRecvPairingAuth"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recv. PA"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPairingStatus"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Paring Auth: NO"
            android:textSize="18sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/btnPairingACK"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Pairing-ACK"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAccessCode_2"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Access Code"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnACK_2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ACK-2"
            android:textSize="24sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/btnOpenDoor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Open Door"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/btnDisPairing"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Dis-Pairing"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btnServerTest_1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Server-Test"
        android:textSize="24sp" />

        <Button
            android:id="@+id/btnStep_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="step_1"
            android:textSize="24sp" />
    </LinearLayout>

    <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/sample_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2">

    </FrameLayout>

</LinearLayout>

